    <style name="LightTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="baseLight">#d5ede7</item>
        <item name="baseDark">#864149</item>
        <item name="accentSelect">#93c8dd</item>
        <item name="accentUnselect">#73b75e</item>
        <item name="logoColor">#3f8942</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="textcolor">#303030</item>
        <item name="invertTextcolor">#FFFFFF</item>
        <item name="invertBackground">#8DFFFFFF</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
