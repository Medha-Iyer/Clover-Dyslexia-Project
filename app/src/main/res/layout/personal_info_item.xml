<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/accentSelect">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/editInfo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:textSize="25sp"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:src="@drawable/name"/>


        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/info_icon"
            android:textStyle="bold"
            android:text="Saved Text 1"
            android:textSize="10sp"
            android:textColor="?attr/baseDark"/>

        <TextView
            android:id="@+id/info_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_title"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/info_icon"
            android:fontFamily="@font/opendyslexic_regular"
            android:scrollbars="vertical"
            android:text="text 1 content..."
            android:textColor="?attr/textcolor"
            android:textSize="20dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>