<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="?attr/invertTextcolor"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/library_sentence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/hearIcon"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="hello"
                android:textSize="18dp"
                android:textColor="?attr/textcolor"
                android:fontFamily="@font/opendyslexic_regular"
                android:lineSpacingExtra="-10dp"/>

            <ImageView
                android:id="@+id/hearIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/ic_hear"
                android:tint="?attr/baseDark"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>