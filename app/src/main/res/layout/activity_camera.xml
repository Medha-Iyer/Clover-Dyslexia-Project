<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Camera">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="340dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/adView"
        android:layout_marginTop="20dp"
        android:background="#fff5fd"
        app:srcCompat="@drawable/ic_insertphoto"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="340dp"
        android:layout_height="215dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_view"
        android:layout_above="@id/convert_text"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:background="#f5f5fd"
        android:scrollbars="vertical"
        android:text="Displaying text..."
        android:fontFamily="@font/opendyslexic_regular"
        android:textSize="15dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/take_photo"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/convert_text"
        android:text="Take Photo"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="23dp"/>
    }

    //format for button appears off but is perfect for my phone
    <Button
        android:id="@+id/from_gallery"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:text="From Gallery"
        android:layout_above="@id/convert_text"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"/>

    <Button
        android:id="@+id/convert_text"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Convert Text to OpenDyslexic Font"
        android:background="#bdf2d8"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_above="@id/nav_bar"/>
<!--    TODO we should have a button for sample photos -->

    //needs to be placed on every single activity

    <Button
        android:id="@+id/save_to_library"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@id/text_view"
        android:layout_below="@id/image_view"
        android:layout_marginTop="40dp"
        android:background="#fff5fd"
        android:text="Save To Library"
        android:textSize="10dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_nav"
        android:elevation="8dp"
        app:itemBackground="@android:color/white"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_nav"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>