<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <rotate android:fromDegrees="-35" android:toDegrees="45"
            android:pivotX="100%" android:pivotY="-30%" >
            <shape android:shape="rectangle">
                <solid
                    android:color="#a996adfc" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate android:fromDegrees="35" android:toDegrees="45"
            android:pivotX="90%" android:pivotY="145%" >
            <shape android:shape="rectangle" >
                <solid
                    android:color="#a975dbaf"/>
            </shape>
        </rotate>
    </item>
</layer-list>